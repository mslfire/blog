<h1 id="page_title">The Beginning</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
		<div class="post">
			<h2><a href="#"><%= link_to post.title, post %></a></h2><p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
			
			<hr>
		</div>
	<% end %>
</div>
<%= will_paginate @posts %>